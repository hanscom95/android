<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:id="@+id/checkbox_layout"
        android:layout_width="40dp"
        android:layout_height="135dp"
        android:layout_centerVertical="true"
        android:background = "@drawable/record_regular_state">
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:button="@drawable/record_tab1_checkbox"/>
    </RelativeLayout>

    <de.morrox.fontinator.FontTextView
        android:id="@+id/date_text"
        android:layout_width="170dp"
        android:layout_height="135dp"
        android:layout_toRightOf="@+id/checkbox_layout"
        android:layout_centerVertical="true"
        android:includeFontPadding="false"
        android:gravity="center"
        android:background = "@drawable/record_regular_state"
        android:text="2017.05.31"
        android:textSize="14sp"
        app:font="NotoSansCJKkr_Regular.otf"
        android:textColor="@android:color/black"/>

    <RelativeLayout
        android:id="@+id/score_layout"
        android:layout_width="100dp"
        android:layout_height="135dp"
        android:layout_toRightOf="@+id/date_text"
        android:layout_centerVertical="true"
        android:background = "@drawable/record_regular_state">

        <de.morrox.fontinator.FontTextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:includeFontPadding="false"
            android:text="123"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:font="NotoSansCJKkr_Regular.otf"
            android:background="@null"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tuning_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/score_layout"
        android:layout_alignTop="@+id/score_layout"
        android:layout_toRightOf="@+id/score_layout">
        <de.morrox.fontinator.FontTextView
            android:id="@+id/brace_high_text"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:background="@drawable/record_regular_state"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="@string/record_brace_high"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:font="NotoSansCJKkr_Regular.otf"/>

        <de.morrox.fontinator.FontTextView
            android:id="@+id/brace_high_value_text"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/brace_high_text"
            android:layout_alignTop="@+id/brace_high_text"
            android:layout_toRightOf="@+id/brace_high_text"
            android:background="@drawable/record_regular_state"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="0"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:font="NotoSansCJKkr_Regular.otf"/>


        <de.morrox.fontinator.FontTextView
            android:id="@+id/tiller_high_text"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_below="@+id/brace_high_text"
            android:background="@drawable/record_regular_state"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="@string/record_tiller_high"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:font="NotoSansCJKkr_Regular.otf"/>

        <de.morrox.fontinator.FontTextView
            android:id="@+id/tiller_high_value_text"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/tiller_high_text"
            android:layout_alignTop="@+id/tiller_high_text"
            android:layout_toRightOf="@+id/tiller_high_text"
            android:background="@drawable/record_regular_state"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="0"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:font="NotoSansCJKkr_Regular.otf"/>



        <de.morrox.fontinator.FontTextView
            android:id="@+id/nocking_point_text"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_below="@+id/tiller_high_text"
            android:background="@drawable/record_regular_state"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="@string/record_nocking_point"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:font="NotoSansCJKkr_Regular.otf"/>

        <de.morrox.fontinator.FontTextView
            android:id="@+id/nocking_point_value_text"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/nocking_point_text"
            android:layout_alignTop="@+id/nocking_point_text"
            android:layout_toRightOf="@+id/nocking_point_text"
            android:background="@drawable/record_regular_state"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="0"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:font="NotoSansCJKkr_Regular.otf"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/environment_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tuning_layout"
        android:layout_alignTop="@+id/tuning_layout"
        android:layout_toRightOf="@+id/tuning_layout">
        <de.morrox.fontinator.FontTextView
            android:id="@+id/weather_text"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:background = "@drawable/record_regular_state"
            android:text="Weather"
            android:textSize="14sp"
            app:font="NotoSansCJKkr_Regular.otf"
            android:textColor="@android:color/black"/>
        <RelativeLayout
            android:id="@+id/weather_layout"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/weather_text"
            android:layout_alignTop="@+id/weather_text"
            android:layout_toRightOf="@+id/weather_text"
            android:background = "@drawable/record_regular_state">
            <ImageView
                android:id="@+id/weather_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_sunny_press"/>
        </RelativeLayout>


        <de.morrox.fontinator.FontTextView
            android:id="@+id/wind_text"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_below="@+id/weather_text"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:gravity="center"
            android:background = "@drawable/record_regular_state"
            android:text="@string/fine_tuning_wind"
            android:textSize="14sp"
            app:font="NotoSansCJKkr_Regular.otf"
            android:textColor="@android:color/black"/>
        <RelativeLayout
            android:id="@+id/wind_layout"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/wind_text"
            android:layout_alignTop="@+id/wind_text"
            android:layout_toRightOf="@+id/wind_text"
            android:background = "@drawable/record_regular_state">
            <ImageView
                android:id="@+id/wind_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_wind_one_press"/>
        </RelativeLayout>



        <de.morrox.fontinator.FontTextView
            android:id="@+id/distance_text"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_below="@+id/wind_text"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:gravity="center"
            android:background = "@drawable/record_regular_state"
            android:text="@string/fine_tuning_distance"
            android:textSize="14sp"
            app:font="NotoSansCJKkr_Regular.otf"
            android:textColor="@android:color/black"/>
        <RelativeLayout
            android:id="@+id/distance_layout"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/distance_text"
            android:layout_alignTop="@+id/distance_text"
            android:layout_toRightOf="@+id/distance_text"
            android:background = "@drawable/record_regular_state">

            <de.morrox.fontinator.FontTextView
                android:id="@+id/distance_value_text"
                android:layout_width="125dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:includeFontPadding="false"
                android:gravity="center"
                android:text="0"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:font="NotoSansCJKkr_Regular.otf"/>
        </RelativeLayout>
    </RelativeLayout>

    <de.morrox.fontinator.FontTextView
        android:id="@+id/comment_text"
        android:layout_width="190dp"
        android:layout_height="135dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/environment_layout"
        android:includeFontPadding="false"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background = "@drawable/record_regular_state"
        android:text="훈련이 정말 힘들었다 ㅎㅎ"
        android:textSize="14sp"
        android:ellipsize="marquee"
        app:font="NotoSansCJKkr_Regular.otf"
        android:textColor="@android:color/black"/>

</RelativeLayout>