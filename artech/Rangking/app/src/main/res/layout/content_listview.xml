<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/chart_btn">

        <RelativeLayout
            android:id="@+id/rank_column"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <de.morrox.fontinator.FontTextView
                android:id="@+id/rank_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:layout_marginRight="10dp"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                app:font="NotoSansCJKkr_Medium.otf" />

            <ImageView
                android:id="@+id/ranking_medal_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/img_medal_1"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/player_column"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rank_column">

            <ImageView
                android:id="@+id/player_member_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/img_member"
                android:visibility="visible" />

            <de.morrox.fontinator.FontTextView
                android:id="@+id/player_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:layout_toRightOf="@+id/player_member_img"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="길동(5662)"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                app:font="NotoSansCJKkr_Medium.otf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/avg_column"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/player_column">

            <de.morrox.fontinator.FontTextView
                android:id="@+id/avg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:includeFontPadding="false"
                android:text="7.6"
                android:textColor="@color/valueText"
                android:textSize="22sp"
                app:font="NotoSansCJKkr_Medium.otf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/homeshop_column"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/avg_column">

            <de.morrox.fontinator.FontTextView
                android:id="@+id/homeshop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="수원권선점"
                android:textColor="@color/shopText"
                android:textSize="22sp"
                app:font="NotoSansCJKkr_Medium.otf" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>