<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/checkbox_layout"
        android:layout_width="72dp"
        android:layout_height="39dp"
        android:layout_centerVertical="true"
        android:background = "@drawable/regular_state">
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:button="@drawable/toggle_booking_checkbox"/>
    </RelativeLayout>

    <de.morrox.fontinator.FontTextView
        android:id="@+id/number_text"
        android:layout_width="162dp"
        android:layout_height="39dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_toRightOf="@+id/checkbox_layout"
        android:background = "@drawable/regular_state"
        android:text=""
        android:textSize="20sp"
        app:font="NotoSansCJKkr_Regular.otf"
        android:textColor="@android:color/black"/>

    <de.morrox.fontinator.FontTextView
        android:id="@+id/info_text"
        android:layout_width="806dp"
        android:layout_height="39dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_toRightOf="@+id/number_text"
        android:background = "@drawable/regular_state"
        android:text=""
        android:textSize="20sp"
        app:font="NotoSansCJKkr_Regular.otf"
        android:textColor="@android:color/black"/>

    <de.morrox.fontinator.FontTextView
        android:id="@+id/name_text"
        android:layout_width="157dp"
        android:layout_height="39dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_toRightOf="@+id/info_text"
        android:background = "@drawable/regular_state"
        android:text=""
        android:textSize="20sp"
        app:font="NotoSansCJKkr_Regular.otf"
        android:textColor="@android:color/black"/>

</RelativeLayout>