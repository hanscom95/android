<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_booking_popup_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/popup_text_table_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <de.morrox.fontinator.FontTextView
            android:id="@+id/info_title"
            android:layout_width="154dp"
            android:layout_height="37dp"
            android:background = "@drawable/regular_state"
            android:gravity="center_horizontal|left"
            android:paddingLeft="20dp"
            android:includeFontPadding="false"
            android:text="내용"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:font="NotoSansCJKkr_Regular.otf" />
        <de.morrox.fontinator.FontEditText
            android:id="@+id/info_text"
            android:layout_width="360dp"
            android:layout_height="37dp"
            android:background = "@drawable/regular_state"
            android:layout_toRightOf="@+id/info_title"
            android:gravity="center_horizontal|left"
            android:paddingLeft="20dp"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:inputType="text"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:font="NotoSansCJKkr_Regular.otf" />
        <de.morrox.fontinator.FontTextView
            android:id="@+id/name_title"
            android:layout_width="154dp"
            android:layout_height="37dp"
            android:background = "@drawable/regular_state"
            android:layout_below="@+id/info_title"
            android:gravity="center_horizontal|left"
            android:paddingLeft="20dp"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:inputType="text"
            android:text="직영점"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:font="NotoSansCJKkr_Regular.otf"/>
        <de.morrox.fontinator.FontEditText
            android:id="@+id/name_text"
            android:layout_width="360dp"
            android:layout_height="37dp"
            android:background = "@drawable/regular_state"
            android:layout_toRightOf="@+id/name_title"
            android:layout_below="@+id/info_text"
            android:gravity="center_horizontal|left"
            android:paddingLeft="20dp"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:inputType="text"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:font="NotoSansCJKkr_Regular.otf" />
        <de.morrox.fontinator.FontTextView
            android:id="@+id/number_title"
            android:layout_width="154dp"
            android:layout_height="37dp"
            android:background = "@drawable/regular_state"
            android:layout_below="@+id/name_title"
            android:gravity="center_horizontal|left"
            android:paddingLeft="20dp"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:inputType="text"
            android:text="전화번호"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:font="NotoSansCJKkr_Regular.otf"/>
        <de.morrox.fontinator.FontEditText
            android:id="@+id/number_text"
            android:layout_width="360dp"
            android:layout_height="37dp"
            android:background = "@drawable/regular_state"
            android:layout_toRightOf="@+id/number_title"
            android:layout_below="@+id/name_text"
            android:gravity="center_horizontal|left"
            android:paddingLeft="20dp"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:inputType="number"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:font="NotoSansCJKkr_Regular.otf" />
        <de.morrox.fontinator.FontTextView
            android:id="@+id/id_text"
            android:layout_width="360dp"
            android:layout_height="37dp"
            android:background = "@drawable/regular_state"
            android:layout_toRightOf="@+id/info_title"
            android:gravity="center_horizontal|left"
            android:paddingLeft="20dp"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:inputType="text"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:font="NotoSansCJKkr_Regular.otf"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/number_title">

            <de.morrox.fontinator.FontButton
                android:id="@+id/update_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/btn_revise"
                android:text="수정"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:font="NotoSansCJKkr_Medium.otf"
                android:visibility="visible"/>

            <de.morrox.fontinator.FontButton
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/update_button"
                android:text="저장"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@mipmap/btn_signup"
                app:font="NotoSansCJKkr_Medium.otf"
                android:visibility="visible"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
