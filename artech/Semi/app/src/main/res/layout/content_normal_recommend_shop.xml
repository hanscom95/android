<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="artech.com.semi.normal.RecommendShopActivity"
    tools:showIn="@layout/activity_normal_recommend_shop"
    android:background="@mipmap/bg_white"
    android:paddingBottom="@dimen/nav_padding_bottom">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <ImageView
                    android:id="@+id/banner_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:src="@mipmap/banner_hotdeal"/>
                <RelativeLayout
                    android:id="@+id/first_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="21.5dp"
                    android:layout_below="@+id/banner_img"
                    android:background="@color/white_four">
                    <TextView
                        android:id="@+id/premium_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14.3dp"
                        android:includeFontPadding="false"
                        android:textSize="10.5sp"
                        android:textColor="@color/warm_grey"
                        android:text="프리미엄"
                        android:fontFamily="@font/notosanscjkkr_medium"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/first_layout"
                    android:layout_width="match_parent"
                    android:layout_height="191dp"
                    android:layout_below="@+id/first_title_layout"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/item_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/layer_3"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/item_event_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginTop="18.5dp"
                        android:paddingTop="4.3dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10.5dp"
                        android:paddingBottom="4dp"
                        android:textSize="10.5sp"
                        android:textColor="@color/white"
                        android:text="단독★[기간 한정] 사은품 증정"
                        android:fontFamily="@font/nanumgothic"
                        android:background="#A5000000"/>

                    <RelativeLayout
                        android:id="@+id/item_bottom_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="14.3dp"
                        android:layout_marginRight="17dp">

                        <TextView
                            android:id="@+id/item_address_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/item_price_text"
                            android:includeFontPadding="false"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="경상북도 포항시"
                            android:fontFamily="@font/nanumgothic"/>

                        <TextView
                            android:id="@+id/item_price_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:includeFontPadding="false"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:text="0원"
                            android:textStyle="bold"
                            android:fontFamily="@font/nanumgothic"
                            android:visibility="invisible"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/item_middle_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/item_bottom_layout"
                        android:layout_marginLeft="14.3dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:id="@+id/vip_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/img_vip"/>

                        <TextView
                            android:id="@+id/item_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/vip_img"
                            android:layout_marginTop="5.8dp"
                            android:includeFontPadding="false"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:text="포항낚시"
                            android:textStyle="bold"
                            android:fontFamily="@font/nanumgothic"/>

                        <RelativeLayout
                            android:id="@+id/item_default_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/item_title_text"
                            android:layout_alignParentRight="true"
                            android:visibility="invisible">

                            <TextView
                                android:id="@+id/item_default_price_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:includeFontPadding="false"
                                android:textSize="12sp"
                                android:textColor="@color/greyish"
                                android:text="0,000원"
                                android:fontFamily="@font/nanumgothic"/>

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="0.5dp"
                                android:layout_centerVertical="true"
                                android:layout_alignLeft="@+id/item_default_price_text"
                                android:layout_alignRight="@+id/item_default_price_text"
                                android:background="@color/grey"/>
                        </RelativeLayout>
                    </RelativeLayout>



                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/second_layout"
                    android:layout_width="match_parent"
                    android:layout_height="191dp"
                    android:layout_below="@+id/first_layout"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/second_item_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/layer_4"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/second_item_event_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginTop="18.5dp"
                        android:paddingTop="4.3dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10.5dp"
                        android:paddingBottom="4dp"
                        android:textSize="10.5sp"
                        android:textColor="@color/white"
                        android:text="단독★[기간 한정] 사은품 증정"
                        android:fontFamily="@font/nanumgothic"
                        android:background="#A5000000"/>

                    <RelativeLayout
                        android:id="@+id/second_item_bottom_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="14.3dp"
                        android:layout_marginRight="17dp">

                        <TextView
                            android:id="@+id/second_item_address_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/second_item_price_text"
                            android:includeFontPadding="false"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="인천광역시 중구"
                            android:fontFamily="@font/nanumgothic"/>

                        <TextView
                            android:id="@+id/second_item_price_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:includeFontPadding="false"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:text="0원"
                            android:textStyle="bold"
                            android:fontFamily="@font/nanumgothic"
                            android:visibility="invisible"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/second_item_middle_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/second_item_bottom_layout"
                        android:layout_marginLeft="14.3dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:id="@+id/second_vip_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/img_vip"/>

                        <TextView
                            android:id="@+id/second_item_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/second_vip_img"
                            android:layout_marginTop="5.8dp"
                            android:includeFontPadding="false"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:text="인천항낚시"
                            android:textStyle="bold"
                            android:fontFamily="@font/nanumgothic"/>

                        <RelativeLayout
                            android:id="@+id/second_item_default_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/second_item_title_text"
                            android:layout_alignParentRight="true"
                            android:visibility="invisible">

                            <TextView
                                android:id="@+id/second_item_default_price_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:includeFontPadding="false"
                                android:textSize="12sp"
                                android:textColor="@color/greyish"
                                android:text="0,000원"
                                android:fontFamily="@font/nanumgothic"/>

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="0.5dp"
                                android:layout_centerVertical="true"
                                android:layout_alignLeft="@+id/second_item_default_price_text"
                                android:layout_alignRight="@+id/second_item_default_price_text"
                                android:background="@color/grey"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/second_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="21.5dp"
                    android:layout_below="@+id/second_layout"
                    android:background="@color/white_four">
                    <TextView
                        android:id="@+id/basic_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14.3dp"
                        android:includeFontPadding="false"
                        android:textSize="10.5sp"
                        android:textColor="@color/warm_grey"
                        android:text="일반"
                        android:fontFamily="@font/notosanscjkkr_medium"/>

                </RelativeLayout>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_layout"
                android:scrollbars="vertical"/>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
