<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="artech.com.semi.utility.naver.NaverMainActivity"
    tools:showIn="@layout/activity_naver_main">

    <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/button_naverlogin"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인해주세요"
        android:id="@+id/oauth_at_text"
        android:layout_below="@+id/iv_user_profile"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인해주세요"
        android:id="@+id/oauth_rt_text"
        android:layout_below="@+id/oauth_at_text"
        android:layout_marginTop="7dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인해주세요"
        android:id="@+id/oauth_expires_text"
        android:layout_below="@+id/oauth_rt_text"
        android:layout_marginTop="7dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인해주세요"
        android:id="@+id/oauth_oauth_token_text"
        android:layout_below="@+id/oauth_expires_text"
        android:layout_marginTop="7dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인해주세요"
        android:id="@+id/oauth_oauth_state_text"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/oauth_oauth_token_text"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/iv_user_profile"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
