<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="artech.com.semi.business.QuestionManagementActivity"
    android:background="@mipmap/bg_white">
    <ScrollView
        android:id="@+id/total_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/first_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/question_product_list_adapter_first_layout_height">
                <View
                    android:id="@+id/first_outline"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/question_product_list_adapter_line"
                    android:background="@color/greyish"/>
                <View
                    android:id="@+id/first_bottom_outline"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/question_product_list_adapter_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyish"/>
                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/question_product_info_text"
                    android:textColor="@color/warm_grey"
                    android:text="0개의 문의글이 있습니다."
                    android:fontFamily="@font/nanumgothic"/>

            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_layout"/>

            <RelativeLayout
                android:id="@+id/second_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/question_product_list_adapter_first_layout_height"
                android:layout_below="@+id/recycler_view"
                android:visibility="gone">
                <View
                    android:id="@+id/second_outline"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/question_product_list_adapter_line"
                    android:background="@color/greyish"/>
                <View
                    android:id="@+id/second_bottom_outline"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/question_product_list_adapter_line"
                    android:layout_alignParentBottom="true"
                    android:background="@color/greyish"/>
                <TextView
                    android:id="@+id/info_second_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/question_product_info_text"
                    android:textColor="@color/warm_grey"
                    android:text="지난 문의글"
                    android:fontFamily="@font/nanumgothic"/>

            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_second_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/second_layout"/>
        </RelativeLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/not_search_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <TextView
            android:id="@+id/non_cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:textSize="@dimen/question_product_non_text"
            android:textColor="@color/warm_grey"
            android:text="문의 요청 건이 없습니다."
            android:fontFamily="@font/nanumgothic"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/non_cancel_text"
            android:layout_marginBottom="@dimen/question_product_non_img_margin_bottom"
            android:src="@mipmap/ic_none"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>