<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="191dp">
        <ImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/item_event_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginTop="18.5dp"
            android:paddingTop="4.3dp"
            android:paddingLeft="15dp"
            android:paddingRight="10.5dp"
            android:paddingBottom="4dp"
            android:textSize="10.5sp"
            android:textColor="@color/white"
            android:text="단독★[기간 한정] 사은품 및 할인쿠폰 증정"
            android:fontFamily="@font/nanumgothic"
            android:background="#A5000000"/>

        <RelativeLayout
            android:id="@+id/item_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="14.3dp"
            android:layout_marginRight="17dp">

            <TextView
                android:id="@+id/item_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_price_text"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="경기도 용인시 00km"
                android:fontFamily="@font/nanumgothic"/>

            <TextView
                android:id="@+id/item_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:includeFontPadding="false"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="0원"
                android:textStyle="bold"
                android:fontFamily="@font/nanumgothic"
                android:visibility="invisible"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_middle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item_bottom_layout"
            android:layout_marginLeft="14.3dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/vip_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_vip"/>

            <TextView
                android:id="@+id/item_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vip_img"
                android:layout_marginTop="5.8dp"
                android:includeFontPadding="false"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="낚시방"
                android:textStyle="bold"
                android:fontFamily="@font/nanumgothic"/>

            <RelativeLayout
                android:id="@+id/item_default_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_title_text"
                android:layout_alignParentRight="true"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/item_default_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:textColor="@color/greyish"
                    android:text="0,000원"
                    android:fontFamily="@font/nanumgothic"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/item_default_price_text"
                    android:layout_alignRight="@+id/item_default_price_text"
                    android:background="@color/grey"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>