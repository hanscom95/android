<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="artech.com.semi.normal.TalkActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/talk_check_layout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
                <RelativeLayout
                    android:id="@+id/total_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/total_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginTop="2dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:text="전체"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/notosanscjkkr_regular"/>
                    <ImageView
                        android:id="@+id/total_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/total_text"
                        android:layout_marginLeft="1.8dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@mipmap/img_new_color_3"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/sea_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/total_layout"
                    android:layout_marginLeft="79dp"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/sea_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginTop="2dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:text="바다조행기"
                        android:textColor="@color/warm_grey"
                        android:textSize="12sp"
                        android:fontFamily="@font/notosanscjkkr_regular"/>
                    <ImageView
                        android:id="@+id/sea_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/sea_text"
                        android:layout_marginLeft="1.8dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@mipmap/img_new_color_3"
                        android:visibility="invisible"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/fresh_water_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/sea_layout"
                    android:layout_marginLeft="79dp"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/fresh_water_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginTop="2dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:text="민물조행기"
                        android:textColor="@color/warm_grey"
                        android:textSize="12sp"
                        android:fontFamily="@font/notosanscjkkr_regular"/>
                    <ImageView
                        android:id="@+id/fresh_water_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/fresh_water_text"
                        android:layout_marginLeft="1.8dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@mipmap/img_new_color_3"
                        android:visibility="invisible"/>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/input_line"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/talk_sort_layout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/talk_check_layout">
            <RadioGroup
                android:id="@+id/sort_radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/one_sort_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:button="@null"
                    android:layout_margin="5dp"
                    android:background="@drawable/talk_sort_one_radio_button"/>

                <RadioButton
                    android:id="@+id/two_sort_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_margin="5dp"
                    android:background="@drawable/talk_sort_two_radio_button"/>

            </RadioGroup>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/talk_sort_layout"
            android:scrollbars="vertical"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>