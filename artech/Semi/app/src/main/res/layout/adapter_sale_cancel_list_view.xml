<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sale_cancel_list_adapter_second_layout_padding_top"
        android:paddingLeft="@dimen/sale_cancel_list_adapter_second_layout_padding_left"
        android:paddingRight="@dimen/sale_cancel_list_adapter_second_layout_padding_right"
        android:paddingBottom="@dimen/sale_cancel_list_adapter_second_layout_padding_bottom"
        android:background="@color/white">
        <ImageView
            android:id="@+id/purchase_img"
            android:layout_width="@dimen/sale_cancel_list_adapter_img_width"
            android:layout_height="@dimen/sale_cancel_list_adapter_img_height"
            android:src="@mipmap/img_photo_1"/>

        <RelativeLayout
            android:id="@+id/refund_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/line_refund_ed"
            android:layout_toEndOf="@+id/purchase_img"
            android:layout_marginLeft="@dimen/sale_cancel_list_adapter_title_margin_left">
            <TextView
                android:id="@+id/refund_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:textSize="@dimen/sale_cancel_list_adapter_refund_text"
                android:textColor="@color/soft_red"
                android:text="환불요청"
                android:fontFamily="@font/nanumgothic"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/purchase_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/refund_layout"
            android:layout_below="@+id/refund_layout"
            android:layout_marginTop="@dimen/sale_cancel_list_adapter_title_margin_top"
            android:includeFontPadding="false"
            android:textSize="@dimen/sale_cancel_list_adapter_text"
            android:textColor="@color/black"
            android:text="Title"
            android:fontFamily="@font/nanumgothic"/>
        <TextView
            android:id="@+id/purchase_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/purchase_title"
            android:layout_below="@+id/purchase_title"
            android:layout_marginTop="@dimen/sale_cancel_list_adapter_time_margin_top"
            android:includeFontPadding="false"
            android:textSize="@dimen/sale_cancel_list_adapter_date_text"
            android:textColor="@color/warm_grey"
            android:text="0000-00-00(일) 00:00~12:00"
            android:fontFamily="@font/nanumgothic"/>
    </RelativeLayout>
    <View
        android:id="@+id/first_outline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sale_cancel_list_adapter_line"
        android:background="@color/greyish"/>
    <View
        android:id="@+id/second_outline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sale_cancel_list_adapter_line"
        android:layout_below="@+id/grid_layout"
        android:background="@color/greyish"/>
</RelativeLayout>