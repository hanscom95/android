<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/purchase_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sale_new_list_adapter_purchase_date_margin_top"
            android:layout_marginLeft="@dimen/sale_new_list_adapter_purchase_date_margin_left"
            android:includeFontPadding="false"
            android:textSize="@dimen/sale_new_list_adapter_purchase_date"
            android:textColor="@color/soft_black"
            android:text="구매일 2018-04-15"
            android:fontFamily="@font/nanumgothic"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/sale_new_list_adapter_line"
            android:background="@color/greyish"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/sale_new_list_adapter_line"
            android:layout_below="@+id/purchase_date"
            android:layout_marginTop="@dimen/sale_new_list_adapter_line_bottom_margin_top"
            android:background="@color/greyish"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/second_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_layout"
        android:paddingTop="@dimen/sale_new_list_adapter_second_layout_padding_top"
        android:paddingLeft="@dimen/sale_new_list_adapter_second_layout_padding_left"
        android:paddingRight="@dimen/sale_new_list_adapter_second_layout_padding_right"
        android:paddingBottom="@dimen/sale_new_list_adapter_second_layout_padding_bottom"
        android:background="@color/white">
        <ImageView
            android:id="@+id/purchase_img"
            android:layout_width="@dimen/sale_new_list_adapter_img_width"
            android:layout_height="@dimen/sale_new_list_adapter_img_height"
            android:src="@mipmap/img_photo_1"/>
        <TextView
            android:id="@+id/purchase_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/purchase_img"
            android:layout_marginLeft="@dimen/sale_new_list_adapter_title_left"
            android:includeFontPadding="false"
            android:textSize="@dimen/sale_new_list_adapter_text"
            android:textColor="@color/black"
            android:text="Title"
            android:fontFamily="@font/notosanscjkkr_bold"/>
        <TextView
            android:id="@+id/purchase_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/purchase_title"
            android:layout_below="@+id/purchase_title"
            android:layout_marginTop="@dimen/sale_new_list_adapter_time_margin_top"
            android:includeFontPadding="false"
            android:textSize="@dimen/sale_new_list_adapter_text"
            android:textColor="@color/black"
            android:text="0000-00-00(일) 00:00~12:00"
            android:fontFamily="@font/nanumgothic"/>
        <TextView
            android:id="@+id/purchase_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/purchase_title"
            android:layout_below="@+id/purchase_time"
            android:layout_marginTop="@dimen/sale_new_list_adapter_name_margin_top"
            android:includeFontPadding="false"
            android:textSize="@dimen/sale_new_list_adapter_text"
            android:textColor="@color/black"
            android:text="이름"
            android:fontFamily="@font/nanumgothic"/>

        <TextView
            android:id="@+id/payment_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/purchase_img"
            android:layout_marginTop="@dimen/sale_new_list_adapter_state_margin_top"
            android:includeFontPadding="false"
            android:textSize="@dimen/sale_new_list_adapter_text"
            android:textColor="@color/soft_red"
            android:text="결제완료"
            android:fontFamily="@font/nanumgothic"/>

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:includeFontPadding="false"
            android:textSize="@dimen/sale_new_list_adapter_quantity"
            android:textColor="@color/soft_red"
            android:text="총 0개"
            android:fontFamily="@font/notosanscjkkr_bold"/>

        <RelativeLayout
            android:id="@+id/detail_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/line_view"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/detail_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:textSize="@dimen/sale_new_list_adapter_detail"
                android:textColor="@color/black"
                android:text="상세보기"
                android:fontFamily="@font/nanumgothic"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/second_layout_outline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sale_new_list_adapter_line"
        android:layout_below="@+id/second_layout"
        android:background="@color/greyish"/>
</RelativeLayout>