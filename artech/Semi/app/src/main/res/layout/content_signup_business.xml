<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="artech.com.semi.login.SignupBusinessActivity"
    tools:showIn="@layout/activity_signup_business"
    android:background="@mipmap/bg_signup"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/signup_layout_margin_top">
            <EditText
                android:id="@+id/id_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/box_id"
                android:paddingLeft="@dimen/signup_id_edit_padding_left"
                android:paddingRight="@dimen/signup_id_edit_padding_right"
                android:hint="@string/account_id_hint"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="255"
                android:singleLine="true"
                android:textSize="@dimen/signup_text"
                android:textColor="@android:color/black"
                android:textColorHint="@color/warm_grey"
                android:fontFamily="@font/notosanscjkkr_regular"/>
            <TextView
                android:id="@+id/id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/signup_id_text_margin_left"
                android:text="@string/account_id_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/signup_text"
                android:fontFamily="@font/notosanscjkkr_regular"/>
            <ImageView
                android:id="@+id/id_check_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/signup_icon_margin_right"
                android:src="@mipmap/ic_check_nonpress" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pw_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_layout"
            android:layout_marginTop="1dp">
            <EditText
                android:id="@+id/pw_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/box_id"
                android:paddingLeft="@dimen/signup_id_edit_padding_left"
                android:paddingRight="@dimen/signup_id_edit_padding_right"
                android:hint="@string/account_pw_hint"
                android:inputType="textPassword"
                android:maxLines="1"
                android:maxLength="255"
                android:singleLine="true"
                android:textSize="@dimen/signup_text"
                android:textColor="@android:color/black"
                android:textColorHint="@color/warm_grey"
                android:fontFamily="@font/notosanscjkkr_regular" />
            <TextView
                android:id="@+id/pw_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/signup_id_text_margin_left"
                android:text="@string/account_pw_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/signup_text"
                android:fontFamily="@font/notosanscjkkr_regular"/>
            <ImageView
                android:id="@+id/pw_check_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/signup_icon_margin_right"
                android:src="@mipmap/ic_check_nonpress" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pw_check_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pw_layout"
            android:layout_marginTop="1dp">
            <EditText
                android:id="@+id/pw_check_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/box_id"
                android:paddingLeft="@dimen/signup_id_edit_padding_left"
                android:paddingRight="@dimen/signup_id_edit_padding_right"
                android:hint="@string/account_pw_check_hint"
                android:inputType="textPassword"
                android:maxLines="1"
                android:maxLength="255"
                android:singleLine="true"
                android:textSize="@dimen/signup_text"
                android:textColor="@android:color/black"
                android:textColorHint="@color/warm_grey"
                android:fontFamily="@font/notosanscjkkr_regular" />
            <TextView
                android:id="@+id/pw_check_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/signup_id_text_margin_left"
                android:text="@string/account_pw_check_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/signup_text"
                android:fontFamily="@font/notosanscjkkr_regular"/>
            <ImageView
                android:id="@+id/pw_c_check_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/signup_icon_margin_right"
                android:src="@mipmap/ic_check_nonpress" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pw_check_layout"
            android:layout_marginTop="1dp">
            <EditText
                android:id="@+id/email_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/box_id"
                android:paddingLeft="@dimen/signup_id_edit_padding_left"
                android:paddingRight="@dimen/signup_id_edit_padding_right"
                android:hint="@string/account_email_hint"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:maxLength="255"
                android:singleLine="true"
                android:textSize="@dimen/signup_text"
                android:textColor="@android:color/black"
                android:textColorHint="@color/warm_grey"
                android:fontFamily="@font/notosanscjkkr_regular" />
            <TextView
                android:id="@+id/email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/signup_id_text_margin_left"
                android:text="@string/account_email_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/signup_text"
                android:fontFamily="@font/notosanscjkkr_regular"/>
            <ImageView
                android:id="@+id/email_check_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/signup_icon_margin_right"
                android:src="@mipmap/ic_check_nonpress" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_layout"
            android:layout_marginTop="@dimen/signup_business_name_margin_top">
            <EditText
                android:id="@+id/name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/box_id"
                android:paddingLeft="@dimen/signup_id_edit_padding_left"
                android:paddingRight="@dimen/signup_id_edit_padding_right"
                android:hint="@string/account_business_name_hint"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="255"
                android:singleLine="true"
                android:textSize="@dimen/signup_text"
                android:textColor="@android:color/black"
                android:textColorHint="@color/warm_grey"
                android:fontFamily="@font/notosanscjkkr_regular" />
            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/signup_id_text_margin_left"
                android:text="@string/account_business_name_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/signup_text"
                android:fontFamily="@font/notosanscjkkr_regular"/>
            <ImageView
                android:id="@+id/name_check_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/signup_icon_margin_right"
                android:src="@mipmap/ic_check_nonpress" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/company_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_layout"
            android:layout_marginTop="1dp">
            <EditText
                android:id="@+id/company_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/box_id"
                android:paddingLeft="@dimen/signup_id_edit_padding_left"
                android:paddingRight="@dimen/signup_id_edit_padding_right"
                android:hint="@string/account_business_company_hint"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="255"
                android:singleLine="true"
                android:textSize="@dimen/signup_text"
                android:textColor="@android:color/black"
                android:textColorHint="@color/warm_grey"
                android:fontFamily="@font/notosanscjkkr_regular" />
            <TextView
                android:id="@+id/company_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/signup_id_text_margin_left"
                android:text="@string/account_business_company_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/signup_text"
                android:fontFamily="@font/notosanscjkkr_regular"/>
            <ImageView
                android:id="@+id/company_check_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/signup_icon_margin_right"
                android:src="@mipmap/ic_check_nonpress" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_layout"
            android:layout_marginTop="1dp">
            <EditText
                android:id="@+id/address_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/box_id"
                android:paddingLeft="@dimen/signup_id_edit_padding_left"
                android:paddingRight="@dimen/signup_id_edit_padding_right"
                android:hint="@string/account_business_address_hint"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="255"
                android:singleLine="true"
                android:textSize="@dimen/signup_text"
                android:textColor="@android:color/black"
                android:textColorHint="@color/warm_grey"
                android:fontFamily="@font/notosanscjkkr_regular" />
            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/signup_id_text_margin_left"
                android:text="@string/account_business_address_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/signup_text"
                android:fontFamily="@font/notosanscjkkr_regular"/>
            <ImageView
                android:id="@+id/address_check_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/signup_icon_margin_right"
                android:src="@mipmap/ic_check_nonpress" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/regist_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_layout"
            android:layout_marginTop="1dp">
            <EditText
                android:id="@+id/regist_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/box_id"
                android:paddingLeft="@dimen/signup_id_edit_padding_left"
                android:paddingRight="@dimen/signup_id_edit_padding_right"
                android:hint="@string/account_business_regist_number_hint"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="255"
                android:singleLine="true"
                android:textSize="@dimen/signup_text"
                android:textColor="@android:color/black"
                android:textColorHint="@color/warm_grey"
                android:fontFamily="@font/notosanscjkkr_regular" />
            <TextView
                android:id="@+id/regist_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/signup_id_text_margin_left"
                android:text="@string/account_business_regist_number_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/signup_text"
                android:fontFamily="@font/notosanscjkkr_regular"/>
            <ImageView
                android:id="@+id/regist_check_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/signup_icon_margin_right"
                android:src="@mipmap/ic_check_nonpress" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/file_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regist_number_layout"
            android:layout_marginTop="1dp"
            android:background="@mipmap/box_file">
            <TextView
                android:id="@+id/file_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/signup_id_text_margin_left"
                android:text="@string/account_business_regist_number_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/signup_text"
                android:fontFamily="@font/notosanscjkkr_regular"/>
            <ImageView
                android:id="@+id/file_check_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/signup_icon_margin_right"
                android:src="@mipmap/ic_check_nonpress" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bank_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/file_layout"
            android:layout_marginTop="@dimen/signup_business_bank_margin_top">
            <EditText
                android:id="@+id/bank_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/box_id"
                android:paddingLeft="@dimen/signup_id_edit_padding_left"
                android:paddingRight="@dimen/signup_id_edit_padding_right"
                android:hint="@string/account_business_bank_hint"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="255"
                android:singleLine="true"
                android:textSize="@dimen/signup_text"
                android:textColor="@android:color/black"
                android:textColorHint="@color/warm_grey"
                android:fontFamily="@font/notosanscjkkr_regular" />
            <TextView
                android:id="@+id/bank_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/signup_id_text_margin_left"
                android:text="@string/account_business_bank_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/signup_text"
                android:fontFamily="@font/notosanscjkkr_regular"/>
            <ImageView
                android:id="@+id/bank_check_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/signup_icon_margin_right"
                android:src="@mipmap/ic_check_nonpress" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/account_holder_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bank_layout"
            android:layout_marginTop="1dp">
            <EditText
                android:id="@+id/account_holder_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/box_id"
                android:paddingLeft="@dimen/signup_id_edit_padding_left"
                android:paddingRight="@dimen/signup_id_edit_padding_right"
                android:hint="@string/account_business_account_holder_hint"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="255"
                android:singleLine="true"
                android:textSize="@dimen/signup_text"
                android:textColor="@android:color/black"
                android:textColorHint="@color/warm_grey"
                android:fontFamily="@font/notosanscjkkr_regular" />
            <TextView
                android:id="@+id/account_holder_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/signup_id_text_margin_left"
                android:text="@string/account_business_account_holder_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/signup_text"
                android:fontFamily="@font/notosanscjkkr_regular"/>
            <ImageView
                android:id="@+id/account_holder_check_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/signup_icon_margin_right"
                android:src="@mipmap/ic_check_nonpress" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/account_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_holder_layout"
            android:layout_marginTop="1dp">
            <EditText
                android:id="@+id/account_number_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/box_id"
                android:paddingLeft="@dimen/signup_id_edit_padding_left"
                android:paddingRight="@dimen/signup_id_edit_padding_right"
                android:hint="@string/account_business_account_number_hint"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="255"
                android:singleLine="true"
                android:textSize="@dimen/signup_text"
                android:textColor="@android:color/black"
                android:textColorHint="@color/warm_grey"
                android:fontFamily="@font/notosanscjkkr_regular" />
            <TextView
                android:id="@+id/account_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/signup_id_text_margin_left"
                android:text="@string/account_business_account_number_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/signup_text"
                android:fontFamily="@font/notosanscjkkr_regular"/>
            <ImageView
                android:id="@+id/account_number_check_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/signup_icon_margin_right"
                android:src="@mipmap/ic_check_nonpress" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/etc_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/account_number_layout"
            android:layout_marginTop="@dimen/signup_etc_margin_top">
            <TextView
                android:id="@+id/etc_first_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/account_etc_first_text"
                android:textColor="@color/lignt_black"
                android:textSize="@dimen/signup_etc_text"
                android:fontFamily="@font/notosanscjkkr_regular"/>
            <TextView
                android:id="@+id/etc_second_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/etc_first_text"
                android:text="@string/account_etc_second_text"
                android:textColor="@color/lignt_black"
                android:textSize="@dimen/signup_etc_text"
                android:fontFamily="@font/notosanscjkkr_regular"/>
        </RelativeLayout>

        <Button
            android:id="@+id/signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_join_2"
            android:layout_below="@+id/etc_layout"
            android:layout_marginTop="@dimen/signup_button_margin_top"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/account_sign_up_button"
            android:textColor="@android:color/white"
            android:textSize="@dimen/signup_button_title_text"
            android:fontFamily="@font/notosanscjkkr_bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/signup_business_bottom_margin"
            android:src="@mipmap/artech_corp"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
