<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="10.8dp"
    android:paddingBottom="14dp">

    <RelativeLayout
        android:id="@+id/first_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10.8dp"
        android:paddingLeft="17.8dp"
        android:paddingRight="17dp"
        android:paddingBottom="14dp"
        android:background="@mipmap/btn_reply"
        android:layout_alignParentRight="true">
        <RelativeLayout
            android:id="@+id/item_first_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.3dp"
            android:layout_marginLeft="17.8dp">
            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:ellipsize="end"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7.5dp"
                android:includeFontPadding="false"
                android:textSize="10.5sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/nanumgothic"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_contents_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_first_layout"
            android:layout_alignLeft="@+id/item_first_layout"
            android:layout_marginTop="18.3dp"
            android:lines="4"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanscjkkr_medium"/>

    </RelativeLayout>
</RelativeLayout>