<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="artech.com.semi.business.ProductManagementActivity"
    tools:showIn="@layout/activity_product_management"
    android:paddingBottom="@dimen/nav_padding_bottom">
    <RelativeLayout
        android:id="@+id/product_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <RelativeLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginTop="@dimen/product_management_content_first_layout_margin_top">
        <Spinner
            android:id="@+id/sort_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/product_management_content_sort_spinner_margin_left"
            android:layout_centerVertical="true"
            android:entries="@array/product_management_sort"
            android:theme="@style/ProductSortSpinner"
            android:dropDownWidth="100dp"/>
        
        <RelativeLayout
            android:id="@+id/filter_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/product_management_content_filter_layout_margin_right"
            android:background="@mipmap/line_filter">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/filter_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_filter"
                    android:clickable="false"
                    android:focusable="false"/>
                <TextView
                    android:id="@+id/filter_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/filter_img"
                    android:layout_marginLeft="@dimen/product_management_content_filter_text_margin_left"
                    android:includeFontPadding="false"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="@string/product_management_content_filter_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/product_management_content_filter_text"
                    android:fontFamily="@font/notosanscjkkr_regular" />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/product_management_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/first_layout"
        android:layout_marginBottom="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <View
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <RelativeLayout
            android:id="@+id/first_search_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/search_view">
            <CheckBox
                android:id="@+id/total_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.8dp"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:buttonTint="@color/purplish_blue"
                android:text="미끼 전체"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/greyish"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/second_search_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/first_search_layout">
            <CheckBox
                android:id="@+id/krill_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.8dp"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:buttonTint="@color/purplish_blue"
                android:text="크릴"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <CheckBox
                android:id="@+id/shrimp_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="197dp"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:buttonTint="@color/purplish_blue"
                android:text="새우류"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/greyish"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/third_search_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/second_search_layout">
            <CheckBox
                android:id="@+id/earthworm_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.8dp"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:buttonTint="@color/purplish_blue"
                android:text="지렁이류"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <CheckBox
                android:id="@+id/sea_​​squirt_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="197dp"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:buttonTint="@color/purplish_blue"
                android:text="개불, 멍게류"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/greyish"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fourth_search_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/third_search_layout">
            <CheckBox
                android:id="@+id/conch_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.8dp"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:buttonTint="@color/purplish_blue"
                android:text="소라류, 조개류"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <CheckBox
                android:id="@+id/crap_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="197dp"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:buttonTint="@color/purplish_blue"
                android:text="게류"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/greyish"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fifth_search_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/fourth_search_layout">
            <CheckBox
                android:id="@+id/sea_urchin_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.8dp"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:buttonTint="@color/purplish_blue"
                android:text="성게류"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <CheckBox
                android:id="@+id/mudfish_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="197dp"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:buttonTint="@color/purplish_blue"
                android:text="미꾸라지"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/greyish"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sixth_search_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/fifth_search_layout">
            <CheckBox
                android:id="@+id/muckworm_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.8dp"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:buttonTint="@color/purplish_blue"
                android:text="구더기"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <CheckBox
                android:id="@+id/corn_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="197dp"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:buttonTint="@color/purplish_blue"
                android:text="옥수수"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/greyish"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/seventh_search_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/sixth_search_layout">
            <CheckBox
                android:id="@+id/mix_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.8dp"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:buttonTint="@color/purplish_blue"
                android:text="집어제류"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <CheckBox
                android:id="@+id/fishing_paste_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="197dp"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:buttonTint="@color/purplish_blue"
                android:text="떡밥(어분)류"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/greyish"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/eighth_search_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/seventh_search_layout">
            <CheckBox
                android:id="@+id/etc_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.8dp"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:buttonTint="@color/purplish_blue"
                android:text="기타"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/greyish"/>
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/product_state_first_layout"
            android:layout_alignBottom="@+id/eighth_search_layout"
            android:layout_marginLeft="179.3dp"
            android:background="@color/greyish"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/product_state_first_layout"
            android:layout_alignBottom="@+id/eighth_search_layout"
            android:layout_marginLeft="179.3dp"
            android:background="@color/greyish"/>


        <Button
            android:id="@+id/select_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/eighth_search_layout"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="45dp"
            android:text="확인"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="@font/nanumgothic"
            android:background="@mipmap/btn_join_2"/>
    </RelativeLayout>
</RelativeLayout>
