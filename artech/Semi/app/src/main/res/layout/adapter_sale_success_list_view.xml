<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sale_success_list_adapter_second_layout_padding_top"
        android:paddingLeft="@dimen/sale_success_list_adapter_second_layout_padding_left"
        android:paddingRight="@dimen/sale_success_list_adapter_second_layout_padding_right"
        android:paddingBottom="@dimen/sale_success_list_adapter_second_layout_padding_bottom"
        android:background="@color/light_grey2">
        <CheckBox
            android:id="@+id/purchase_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.8dp"
            android:layout_centerVertical="true"
            android:buttonTint="@color/lavender_blue"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/purchase_img"
            android:layout_width="@dimen/sale_success_list_adapter_img_width"
            android:layout_height="@dimen/sale_success_list_adapter_img_height"
            android:layout_marginLeft="8.8dp"
            android:layout_toRightOf="@+id/purchase_checkbox"
            android:src="@mipmap/img_photo_1"/>
        <TextView
            android:id="@+id/purchase_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/purchase_img"
            android:layout_marginLeft="@dimen/sale_success_list_adapter_title_margin_left"
            android:includeFontPadding="false"
            android:textSize="@dimen/sale_success_list_adapter_text"
            android:textColor="@color/greyish_brown"
            android:text="Title"
            android:fontFamily="@font/nanumgothic"/>
        <TextView
            android:id="@+id/purchase_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/purchase_title"
            android:layout_below="@+id/purchase_title"
            android:layout_marginTop="@dimen/sale_success_list_adapter_time_margin_top"
            android:includeFontPadding="false"
            android:textSize="@dimen/sale_success_list_adapter_text"
            android:textColor="@color/warm_grey"
            android:text="0000-00-00(일) 00:00~12:00"
            android:fontFamily="@font/nanumgothic"/>
        <TextView
            android:id="@+id/purchase_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/purchase_title"
            android:layout_below="@+id/purchase_time"
            android:layout_marginTop="@dimen/sale_success_list_adapter_name_margin_top"
            android:includeFontPadding="false"
            android:textSize="@dimen/sale_success_list_adapter_text"
            android:textColor="@color/warm_grey"
            android:text="이름"
            android:fontFamily="@font/nanumgothic"/>

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:includeFontPadding="false"
            android:textSize="@dimen/sale_success_list_adapter_quantity_text"
            android:textColor="@color/warm_grey"
            android:text="총 0개"
            android:fontFamily="@font/notosanscjkkr_bold"/>

        <RelativeLayout
            android:id="@+id/detail_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_end"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/detail_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:textSize="@dimen/sale_success_list_adapter_detail_text"
                android:textColor="@color/white"
                android:text="수령완료"
                android:fontFamily="@font/nanumgothic"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/first_outline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sale_success_list_adapter_line"
        android:background="@color/greyish"/>
    <View
        android:id="@+id/second_outline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sale_success_list_adapter_line"
        android:layout_below="@+id/grid_layout"
        android:background="@color/greyish"/>
</RelativeLayout>