<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/customer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/first_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15.8dp"
            android:paddingLeft="15.8dp"
            android:paddingRight="15.8dp"
            android:paddingBottom="15.8dp">
            <artech.com.semi.utility.CircleImageView
                android:id="@+id/item_profile_img"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/img_profilephoto"/>
            <RelativeLayout
                android:id="@+id/item_middle_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_profile_img"
                android:layout_marginLeft="10.8dp">
                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:includeFontPadding="false"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosanscjkkr_medium"/>

                <RelativeLayout
                    android:id="@+id/item_review_point_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_name"
                    android:layout_marginTop="9.3dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:id="@+id/item_first_fish_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/img_fish_nonpress"/>
                        <ImageView
                            android:id="@+id/item_second_fish_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/item_first_fish_img"
                            android:layout_marginLeft="3.5dp"
                            android:src="@mipmap/img_fish_nonpress"/>
                        <ImageView
                            android:id="@+id/item_third_fish_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/item_second_fish_img"
                            android:layout_marginLeft="3.5dp"
                            android:src="@mipmap/img_fish_nonpress"/>
                        <ImageView
                            android:id="@+id/item_fourth_fish_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/item_third_fish_img"
                            android:layout_marginLeft="3.5dp"
                            android:src="@mipmap/img_fish_nonpress"/>
                        <ImageView
                            android:id="@+id/item_fifth_fish_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/item_fourth_fish_img"
                            android:layout_marginLeft="3.5dp"
                            android:src="@mipmap/img_fish_nonpress"/>
                    </RelativeLayout>
                </RelativeLayout>


                <ImageView
                    android:id="@+id/item_first_img"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="13.8dp"
                    android:layout_below="@+id/item_review_point_layout"
                    android:scaleType="fitXY"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/item_second_img"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="1dp"
                    android:layout_below="@+id/item_first_img"
                    android:scaleType="fitXY"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/item_third_img"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="1dp"
                    android:layout_below="@+id/item_second_img"
                    android:scaleType="fitXY"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/item_contents_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_third_img"
                    android:layout_marginTop="13.8dp"
                    android:includeFontPadding="false"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosanscjkkr_medium"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_contents_text"
                    android:layout_marginTop="30.5dp">

                    <TextView
                        android:id="@+id/item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textSize="10.5sp"
                        android:textColor="@color/grey"
                        android:text="0000-00-00(일) 00:00~12:00"
                        android:fontFamily="@font/nanumgothic"/>
                    <TextView
                        android:id="@+id/item_review_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/item_time"
                        android:layout_marginLeft="4.8dp"
                        android:includeFontPadding="false"
                        android:textSize="10.5sp"
                        android:textColor="@color/grey"
                        android:text="답글달기"
                        android:fontFamily="@font/nanumgothic"
                        android:visibility="gone"/>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recommend_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/btn_thumbs_up_nonpress"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/item_middle_layout"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:id="@+id/recommend_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_thumbs_up_nonpress_copy"/>
                    <TextView
                        android:id="@+id/recommend_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/recommend_img"
                        android:layout_marginLeft="2dp"
                        android:includeFontPadding="false"
                        android:textSize="10.5sp"
                        android:textColor="@color/warm_grey"
                        android:text="도움돼요"
                        android:textStyle="bold"
                        android:fontFamily="@font/nanumgothic"/>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
        <View
            android:id="@+id/second_layout_outline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sale_new_list_adapter_line"
            android:layout_below="@+id/first_layout"
            android:background="@color/greyish"/>
    </RelativeLayout>
</RelativeLayout>