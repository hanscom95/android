<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_layou"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/sort_one_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/item_one_first_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11.3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="17.3dp">
            <artech.com.semi.utility.CircleImageView
                android:id="@+id/item_one_profile_img"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_profilephoto"/>

            <TextView
                android:id="@+id/item_one_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_one_profile_img"
                android:layout_marginLeft="10.8dp"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:text="name"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <RelativeLayout
                android:id="@+id/item_one_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/item_one_name"
                android:layout_marginTop="34.3dp">
                <ImageView
                    android:id="@+id/item_one_place_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_place"/>
                <TextView
                    android:id="@+id/item_one_place_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_one_place_img"
                    android:layout_marginLeft="1.8dp"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="한국"
                    android:textSize="9sp"
                    android:textColor="@color/greyish"
                    android:fontFamily="@font/notosanscjkkr_regular"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/item_one_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:textSize="10.5sp"
                android:textColor="@color/grey"
                android:text="0000-00-00(일) 00:00~12:00"
                android:fontFamily="@font/nanumgothic"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_one_second_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_one_first_layout"
            android:layout_alignLeft="@+id/item_one_first_layout"
            android:layout_alignRight="@+id/item_one_first_layout"
            android:layout_marginTop="14.8dp">
            <TextView
                android:id="@+id/item_one_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:fontFamily="@font/notosanscjkkr_medium"/>
            <TextView
                android:id="@+id/item_one_contents_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_one_title_text"
                android:lines="2"
                android:maxLines="2"
                android:maxLength="50"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:textColor="@color/greyish_brown"
                android:fontFamily="@font/notosanscjkkr_regular"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_one_third_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_one_second_layout"
            android:layout_marginTop="12.5dp">
            <android.support.v4.view.ViewPager
                android:id="@+id/item_one_viewpager"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_one_fourth_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_one_third_layout"
            android:layout_alignLeft="@+id/item_one_first_layout"
            android:layout_alignRight="@+id/item_one_first_layout"
            android:layout_marginTop="14dp">
            <ImageView
                android:id="@+id/item_one_favorite_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_favorite_2"/>

            <TextView
                android:id="@+id/item_one_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/item_one_favorite_img"
                android:layout_marginLeft="5.5dp"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:textColor="@color/greyish_brown"
                android:text="0"
                android:fontFamily="@font/nanumgothic"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/item_one_review_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="댓글"
                    android:fontFamily="@font/notosanscjkkr_regular"/>
                <TextView
                    android:id="@+id/item_one_review_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/item_one_review_text"
                    android:layout_marginLeft="5.8dp"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:textColor="@color/greyish_brown"
                    android:text="0"
                    android:fontFamily="@font/nanumgothic"/>
                <TextView
                    android:id="@+id/item_one_scrap_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/item_one_review_value_text"
                    android:layout_marginLeft="10.3dp"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="스크랩"
                    android:fontFamily="@font/notosanscjkkr_regular"/>
                <TextView
                    android:id="@+id/item_one_scrap_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/item_one_scrap_text"
                    android:layout_marginLeft="5.8dp"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:textColor="@color/greyish_brown"
                    android:text="0"
                    android:fontFamily="@font/nanumgothic"/>

            </RelativeLayout>
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_one_fifth_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_one_fourth_layout"
            android:layout_alignLeft="@+id/item_one_first_layout"
            android:layout_alignRight="@+id/item_one_first_layout"
            android:layout_marginTop="25dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <CheckBox
                    android:id="@+id/item_one_favorites_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:paddingLeft="2dp"
                    android:text="좋아요"
                    android:textSize="12sp"
                    android:textColor="@color/greyish_brown"
                    android:button="@drawable/favorites_heart_checkbox"
                    android:fontFamily="@font/notosanscjkkr_regular"/>

                <RelativeLayout
                    android:id="@+id/item_one_review_write_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/item_one_favorites_checkbox"
                    android:layout_marginLeft="55dp">

                    <ImageView
                        android:id="@+id/item_one_review_write_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_review_2"/>

                    <TextView
                        android:id="@+id/item_one_review_write_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/item_one_review_write_img"
                        android:layout_marginLeft="4.8dp"
                        android:includeFontPadding="false"
                        android:textSize="12sp"
                        android:textColor="@color/greyish_brown"
                        android:text="댓글쓰기"
                        android:fontFamily="@font/nanumgothic"/>

                </RelativeLayout>

                <CheckBox
                    android:id="@+id/item_one_scrap_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/item_one_review_write_layout"
                    android:layout_marginLeft="64dp"
                    android:includeFontPadding="false"
                    android:paddingLeft="2dp"
                    android:text="스크랩"
                    android:textSize="12sp"
                    android:textColor="@color/greyish_brown"
                    android:button="@drawable/scrap_checkbox"
                    android:fontFamily="@font/notosanscjkkr_regular"/>
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/item_one_middle_outline"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="13.8dp"
            android:layout_below="@+id/item_one_fourth_layout"
            android:layout_alignLeft="@+id/item_one_first_layout"
            android:layout_alignRight="@+id/item_one_first_layout"
            android:background="@color/greyish"/>
        <View
            android:id="@+id/item_one_top_outline"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/greyish"/>
        <View
            android:id="@+id/item_one_bottom_outline"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@+id/item_one_fifth_layout"
            android:layout_marginTop="11dp"
            android:background="@color/greyish"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/sort_two_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/item_two_first_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp">
            <artech.com.semi.utility.CircleImageView
                android:id="@+id/item_two_profile_img"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_profilephoto"/>

            <TextView
                android:id="@+id/item_two_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_two_profile_img"
                android:layout_marginLeft="10.8dp"
                android:includeFontPadding="false"
                android:text="name"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <RelativeLayout
                android:id="@+id/item_two_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/item_two_name"
                android:layout_marginTop="23.3dp">
                <ImageView
                    android:id="@+id/item_two_place_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_place"/>
                <TextView
                    android:id="@+id/item_two_place_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_two_place_img"
                    android:layout_marginLeft="1.8dp"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="한국"
                    android:textSize="9sp"
                    android:textColor="@color/greyish"
                    android:fontFamily="@font/notosanscjkkr_regular"/>
            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/item_two_second_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_two_first_layout"
            android:layout_marginTop="7dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/item_two_viewpager"
                android:layout_width="match_parent"
                android:layout_height="137dp"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_two_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_two_first_layout"
            android:layout_alignRight="@+id/item_two_first_layout"
            android:layout_below="@+id/item_two_second_layout"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanscjkkr_medium"/>

        <TextView
            android:id="@+id/item_two_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_two_first_layout"
            android:layout_below="@+id/item_two_title_text"
            android:layout_marginTop="12.8dp"
            android:includeFontPadding="false"
            android:textSize="10.5sp"
            android:textColor="@color/grey"
            android:text="0000-00-00(일) 00:00~12:00"
            android:fontFamily="@font/nanumgothic"/>


        <View
            android:id="@+id/item_two_top_outline"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/greyish"/>
        <View
            android:id="@+id/item_two_bottom_outline"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@+id/item_two_date"
            android:layout_marginTop="12dp"
            android:background="@color/greyish"/>


        <View
            android:id="@+id/item_two_left_outline"
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@color/greyish"/>

        <View
            android:id="@+id/item_two_right_outline"
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/greyish"/>
    </RelativeLayout>
</RelativeLayout>