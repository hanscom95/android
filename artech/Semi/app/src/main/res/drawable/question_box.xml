<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/aqua_marine" />
                    <stroke
                        android:width="0.3dp"
                        android:color="@color/input_line" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/white" />
                    <stroke
                        android:width="0.3dp"
                        android:color="@color/input_line" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>