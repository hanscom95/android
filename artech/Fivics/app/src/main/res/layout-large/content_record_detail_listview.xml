<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/my_rank_list_row">

        <RelativeLayout
            android:id="@+id/name_column"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <de.morrox.fontinator.FontTextView
                android:id="@+id/rank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="홍길동"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:font="NotoSansCJKkr_Regular.otf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/date_column"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/name_column">

            <de.morrox.fontinator.FontTextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:text="2017.01.01"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:font="NotoSansCJKkr_Regular.otf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/arrow_column"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/date_column">

            <de.morrox.fontinator.FontTextView
                android:id="@+id/arrow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:font="NotoSansCJKkr_Regular.otf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/avg_column"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/arrow_column">

            <de.morrox.fontinator.FontTextView
                android:id="@+id/avg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="0.0"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:font="NotoSansCJKkr_Regular.otf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/score_column"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/avg_column">

            <de.morrox.fontinator.FontTextView
                android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:font="NotoSansCJKkr_Regular.otf" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>