<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_terms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/terms_bg"
    tools:context="artech.com.fivics.TermsConditionsActivity"
    android:adjustViewBounds="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/terms_logo"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:src="@mipmap/logo_small" />

            <de.morrox.fontinator.FontTextView
                android:id="@+id/terms_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/terms_logo"
                android:layout_marginLeft="18dp"
                android:layout_toEndOf="@+id/terms_logo"
                android:text="@string/terms_title"
                android:textColor="@android:color/white"
                android:includeFontPadding="false"
                android:textSize="40sp"
                app:font="NotoSansCJKkr_Medium.otf" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="239.33dp">

            <ScrollView
                android:id="@+id/terms_conditions"
                android:layout_width="1202.67dp"
                android:layout_height="503.33dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@mipmap/accessterms">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <de.morrox.fontinator.FontTextView
                        android:id="@+id/terms_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"/>
                </RelativeLayout>
            </ScrollView>

            <de.morrox.fontinator.FontCheckBox
                android:id="@+id/terms_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/terms_conditions"
                android:layout_below="@+id/terms_conditions"
                android:layout_marginTop="29dp"
                android:button="@drawable/toggle_terms_checkbox"
                android:paddingLeft="28dp"
                android:text="@string/terms_checkbox_value"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                app:font="NotoSansCJKkr_Medium.otf" />

            <de.morrox.fontinator.FontButton
                android:id="@+id/terms_button"
                android:layout_width="239.2dp"
                android:layout_height="82.33dp"
                android:layout_alignEnd="@+id/terms_conditions"
                android:layout_below="@+id/terms_conditions"
                android:layout_marginTop="26.67dp"
                android:background="@mipmap/btn_next"
                android:text="@string/terms_next_button"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                app:font="NotoSansCJKkr_Bold.otf"
                android:visibility="invisible"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="151.33dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="1.67dp"
                android:src="@mipmap/ic_circle_lightblue" />

            <ImageView
                android:id="@+id/ic_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="2.67dp"
                android:src="@mipmap/ic_circle_gray" />

            <ImageView
                android:id="@+id/ic_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="2.67dp"
                android:src="@mipmap/ic_circle_gray" />

            <ImageView
                android:id="@+id/ic_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="2.67dp"
                android:src="@mipmap/ic_circle_gray" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
