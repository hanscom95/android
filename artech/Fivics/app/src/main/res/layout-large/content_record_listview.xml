<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/rank_list_row">

        <RelativeLayout
            android:id="@+id/rank_column"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <de.morrox.fontinator.FontTextView
                android:id="@+id/rank_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                app:font="NotoSansCJKkr_Bold.otf" />

            <ImageView
                android:id="@+id/ranking_medal_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/medal_1"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/player_column"
            android:layout_width="510dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/rank_column">


            <ImageView
                android:id="@+id/player_member_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:src="@mipmap/img_member"
                android:visibility="visible" />

            <de.morrox.fontinator.FontTextView
                android:id="@+id/player_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:layout_toEndOf="@+id/player_member_img"
                android:text="길동(5662)"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                app:font="NotoSansCJKkr_Bold.otf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/avg_column"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/player_column">

            <de.morrox.fontinator.FontTextView
                android:id="@+id/avg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="7.6"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                app:font="NotoSansCJKkr_Bold.otf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/total_column"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/avg_column">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <de.morrox.fontinator.FontTextView
                    android:id="@+id/total_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="114"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    app:font="NotoSansCJKkr_Bold.otf" />

                <de.morrox.fontinator.FontTextView
                    android:id="@+id/arrow_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/total_text"
                    android:text="(15)"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="32sp"
                    app:font="NotoSansCJKkr_Regular.otf" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/homeshop_column"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/total_column">

            <de.morrox.fontinator.FontTextView
                android:id="@+id/homeshop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="수원권선점"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                app:font="NotoSansCJKkr_Bold.otf" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>