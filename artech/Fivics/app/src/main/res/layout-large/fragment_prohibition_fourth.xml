<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:id="@+id/fourth_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_arrow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp" />
    <de.morrox.fontinator.FontTextView
        android:id="@+id/fourth_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourth_img"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:layout_marginTop="72dp"
        android:text="@string/prohibition_fourth_text"
        android:textSize="60sp"
        android:textColor="@color/prohibition_text"
        app:font="NotoSansCJKkr_Bold.otf"/>
    <de.morrox.fontinator.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourth_text"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:layout_marginTop="12dp"
        android:text="@string/prohibition_fourth_detail_text"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        app:font="NotoSansCJKkr_Medium.otf" />
</RelativeLayout>