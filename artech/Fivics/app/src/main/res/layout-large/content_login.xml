<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="artech.com.fivics.LoginActivity"
    android:background="@mipmap/terms_bg"
    android:adjustViewBounds="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/login_logo"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:src="@mipmap/logo_small" />

            <de.morrox.fontinator.FontTextView
                android:id="@+id/login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/login_logo"
                android:layout_marginLeft="18dp"
                android:layout_toEndOf="@+id/login_logo"
                android:text="@string/login_title"
                android:textColor="@android:color/white"
                android:textSize="40sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="425.33dp">

            <RelativeLayout
                android:id="@+id/phone_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <de.morrox.fontinator.FontEditText
                    android:id="@+id/phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/toggle_login_input_box"
                    android:hint="@string/login_phone"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingLeft="132dp"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textSize="32sp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="52dp"
                    android:src="@mipmap/ic_phone_iphone" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="89.33dp">

                <de.morrox.fontinator.FontEditText
                    android:id="@+id/name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/toggle_login_input_box"
                    android:hint="@string/login_name"
                    android:imeActionId="@+id/login_ime"
                    android:imeActionLabel="@string/login_done"
                    android:inputType="text"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:paddingLeft="132dp"
                    android:textSize="32sp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="52dp"
                    android:src="@mipmap/ic_person_white" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="58dp">


        <RelativeLayout
            android:id="@+id/before_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/before_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="57dp"
                android:src="@mipmap/ic_arrow_back_white"  />

            <de.morrox.fontinator.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/before_img"
                android:text="@string/before_button"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                app:font="NotoSansCJKkr_Bold.otf" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/next_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <de.morrox.fontinator.FontTextView
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="@string/next_button"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                app:font="NotoSansCJKkr_Bold.otf" />

            <ImageView
                android:id="@+id/next_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="59dp"
                android:layout_toEndOf="@+id/next_button"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_arrow_next_white" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="151.33dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="2.67dp"
                android:src="@mipmap/ic_circle_gray" />

            <ImageView
                android:id="@+id/ic_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="2.67dp"
                android:src="@mipmap/ic_circle_gray" />

            <ImageView
                android:id="@+id/ic_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="1.67dp"
                android:src="@mipmap/ic_circle_lightblue" />

            <ImageView
                android:id="@+id/ic_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="2.67dp"
                android:src="@mipmap/ic_circle_gray" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
