<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_archery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="artech.com.fivics.archery.ArcherySettingActivity"
    tools:showIn="@layout/activity_archery_setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="25sp"
            android:paddingRight="25sp">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/archery_block_bow_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/top_bar_active"></ImageView>

                <de.morrox.fontinator.FontTextView
                    android:id="@+id/archery_title_bow_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="10sp"
                    android:text="Bow type"
                    android:textColor="@color/archery_text_active"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    app:font="Semibold.otf" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="20sp">

                <ImageView
                    android:id="@+id/archery_block_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/top_bar_active"></ImageView>

                <de.morrox.fontinator.FontTextView
                    android:id="@+id/archery_title_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="10sp"
                    android:text="Distance"
                    android:textColor="@color/archery_text_active"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    app:font="Semibold.otf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="40sp">

                <ImageView
                    android:id="@+id/archery_block_equipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/top_bar_active"></ImageView>

                <de.morrox.fontinator.FontTextView
                    android:id="@+id/archery_title_equipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="10sp"
                    android:text="Equipment"
                    android:textColor="@color/archery_text_active"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    app:font="Semibold.otf" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">


        <LinearLayout
            android:id="@+id/archery_setting_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/archery_button_recurve"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginEnd="@dimen/box_bottom_interval"
                        android:layout_marginStart="@dimen/box_start_interval"
                        android:layout_weight="1"
                        android:background="@mipmap/big_box_default">

                        <de.morrox.fontinator.FontTextView
                            android:id="@+id/archery_button_recurve_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="RECURVE"
                            android:textColor="@color/archery_text_active"
                            android:textSize="14sp"
                            app:font="Semibold.otf" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/archery_button_compound"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginEnd="@dimen/box_bottom_interval"
                        android:layout_marginStart="@dimen/box_start_interval"
                        android:layout_weight="1"
                        android:background="@mipmap/big_box_default">

                        <de.morrox.fontinator.FontTextView
                            android:id="@+id/archery_button_compound_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="COMPOUND"
                            android:textColor="@color/archery_text_active"
                            android:textSize="14sp"
                            app:font="Semibold.otf" />

                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <de.morrox.fontinator.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text=">"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/archery_button_18m"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/box_bottom_interval"
                        android:layout_marginStart="@dimen/box_start_interval"
                        android:layout_weight="1"
                        android:background="@mipmap/small_box_default">

                        <de.morrox.fontinator.FontTextView
                            android:id="@+id/archery_button_18m_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="18m"
                            android:textColor="@color/archery_text_active"
                            android:textSize="14sp"
                            app:font="Semibold.otf" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/archery_button_30m"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/box_bottom_interval"
                        android:layout_marginStart="@dimen/box_start_interval"
                        android:layout_weight="1"
                        android:background="@mipmap/small_box_default">

                        <de.morrox.fontinator.FontTextView
                            android:id="@+id/archery_button_30m_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="30m"
                            android:textColor="@color/archery_text_active"
                            android:textSize="14sp"
                            app:font="Semibold.otf" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/archery_button_50m"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/box_bottom_interval"
                        android:layout_marginStart="@dimen/box_start_interval"
                        android:layout_weight="1"
                        android:background="@mipmap/small_box_default">

                        <de.morrox.fontinator.FontTextView
                            android:id="@+id/archery_button_50m_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="50m"
                            android:textColor="@color/archery_text_active"
                            android:textSize="14sp"
                            app:font="Semibold.otf" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/archery_button_70m"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/box_bottom_interval"
                        android:layout_marginStart="@dimen/box_start_interval"
                        android:layout_weight="1"
                        android:background="@mipmap/small_box_default">

                        <de.morrox.fontinator.FontTextView
                            android:id="@+id/archery_button_70m_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="70m"
                            android:textColor="@color/archery_text_active"
                            android:textSize="14sp"
                            app:font="Semibold.otf" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/archery_button_90m"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/box_bottom_interval"
                        android:layout_marginStart="@dimen/box_start_interval"
                        android:layout_weight="1"
                        android:background="@mipmap/small_box_default">

                        <de.morrox.fontinator.FontTextView
                            android:id="@+id/archery_button_90m_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="90m"
                            android:textColor="@color/archery_text_active"
                            android:textSize="14sp"
                            app:font="Semibold.otf" />

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <de.morrox.fontinator.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text=">"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/archery_button_riser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/box_bottom_interval"
                        android:layout_marginStart="@dimen/box_start_interval"
                        android:layout_weight="1"
                        android:background="@mipmap/small_box_default">

                        <de.morrox.fontinator.FontTextView
                            android:id="@+id/archery_button_riser_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="RISER"
                            android:textColor="@color/archery_text_active"
                            android:textSize="14sp"
                            app:font="Semibold.otf" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/archery_button_limb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/box_bottom_interval"
                        android:layout_marginStart="@dimen/box_start_interval"
                        android:layout_weight="1"
                        android:background="@mipmap/small_box_default">

                        <de.morrox.fontinator.FontTextView
                            android:id="@+id/archery_button_limb_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="LIMB"
                            android:textColor="@color/archery_text_active"
                            android:textSize="14sp"
                            app:font="Semibold.otf" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/archery_button_sight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/box_bottom_interval"
                        android:layout_marginStart="@dimen/box_start_interval"
                        android:layout_weight="1"
                        android:background="@mipmap/small_box_default">

                        <de.morrox.fontinator.FontTextView
                            android:id="@+id/archery_button_sight_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="SIGHT"
                            android:textColor="@color/archery_text_active"
                            android:textSize="14sp"
                            app:font="Semibold.otf" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/archery_button_stabi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/box_bottom_interval"
                        android:layout_marginStart="@dimen/box_start_interval"
                        android:layout_weight="1"
                        android:background="@mipmap/small_box_default">

                        <de.morrox.fontinator.FontTextView
                            android:id="@+id/archery_button_stabi_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="STABI"
                            android:textColor="@color/archery_text_active"
                            android:textSize="14sp"
                            app:font="Semibold.otf" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/archery_button_finger_tab"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/box_bottom_interval"
                        android:layout_marginStart="@dimen/box_start_interval"
                        android:layout_weight="1"
                        android:background="@mipmap/small_box_default">

                        <de.morrox.fontinator.FontTextView
                            android:id="@+id/archery_button_finger_tab_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="FINGER TAB"
                            android:textColor="@color/archery_text_active"
                            android:textSize="14sp"
                            app:font="Semibold.otf" />

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/archery_button_start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="23.33dp">

                <de.morrox.fontinator.FontButton
                    android:id="@+id/archery_button_start_label"
                    android:layout_width="175px"
                    android:layout_height="175px"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/button_start_disabled"
                    android:textColor="@color/archery_bg"
                    android:textSize="18sp"
                    app:font="Bold.otf" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
