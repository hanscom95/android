<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_setting_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_intro">
    <RelativeLayout
        android:id="@+id/setting_layout"
        android:layout_width="607dp"
        android:layout_height="478dp"
        android:background="@mipmap/img_popupbg">
        <RelativeLayout
            android:id="@+id/arrow_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="130dp">
            <TextView
                android:id="@+id/arrow_text"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/number_of_firing"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/arrow_up_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/arrow_text"
                android:layout_marginTop="11dp"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:src="@mipmap/btn_up"/>

            <RelativeLayout
                android:id="@+id/arrow_value_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/arrow_up_button"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/img_numberbg">
                <TextView
                    android:id="@+id/arrow_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="36sp"/>
            </RelativeLayout>

            <ImageButton
                android:id="@+id/arrow_down_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/arrow_value_layout"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:src="@mipmap/btn_down"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/round_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/arrow_layout"
            android:layout_toRightOf="@+id/arrow_layout"
            android:layout_marginLeft="124dp">
            <TextView
                android:id="@+id/round_text"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/round"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/round_up_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/round_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/btn_up"/>

            <RelativeLayout
                android:id="@+id/round_value_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/round_up_button"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/img_numberbg">
                <TextView
                    android:id="@+id/round_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="36sp"/>
            </RelativeLayout>

            <ImageButton
                android:id="@+id/round_down_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/round_value_layout"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:src="@mipmap/btn_down"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/arrow_layout"
            android:layout_below="@+id/arrow_layout"
            android:layout_marginTop="35dp">
            <TextView
                android:id="@+id/time_text"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:includeFontPadding="false"
                android:text="@string/time"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/time_up_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/btn_up"/>

            <RelativeLayout
                android:id="@+id/time_value_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_up_button"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/img_numberbg">
                <TextView
                    android:id="@+id/time_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="00:00"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"/>
            </RelativeLayout>

            <ImageButton
                android:id="@+id/time_down_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_value_layout"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:src="@mipmap/btn_down"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/withdraw_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/time_layout"
            android:layout_toRightOf="@+id/time_layout"
            android:layout_marginLeft="124dp">
            <TextView
                android:id="@+id/withdraw_text"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/payback_time"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/withdraw_up_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/withdraw_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/btn_up"/>

            <RelativeLayout
                android:id="@+id/withdraw_value_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/withdraw_up_button"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/img_numberbg">
                <TextView
                    android:id="@+id/withdraw_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="00:00"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"/>
            </RelativeLayout>

            <ImageButton
                android:id="@+id/withdraw_down_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/withdraw_value_layout"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:src="@mipmap/btn_down"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/confirm_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_layout"
        android:background="@mipmap/btn_popup">
        <TextView
            android:id="@+id/confirm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:text="@string/confirm"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>
    </RelativeLayout>
</RelativeLayout>
