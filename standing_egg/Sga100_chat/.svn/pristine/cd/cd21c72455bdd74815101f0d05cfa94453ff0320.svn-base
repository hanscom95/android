<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light" >
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme" icon="@drawable/actionbar_logo">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" icon="@drawable/actionbar_logo"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.Holo.Light.ActionBar.Menu</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#C3143B</item>
    </style>
    
    <style name="TextAppearance.Holo.Light.ActionBar.Menu" 
        parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/font_white</item>
    </style>
    

</resources>
