<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="se.com.band.MainMenuActivity"
    tools:showIn="@layout/activity_main_menu">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="13.33dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/profile_layout"
                android:background="@mipmap/menu_box">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    app:srcCompat="@mipmap/menu_profile"
                    android:id="@+id/profile_logo"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="15dp" />

                <de.morrox.fontinator.FontTextView
                    android:text="@string/menu_profile_n_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_text"
                    app:font="Semibold.otf"
                    android:textColor="@color/activity_bg"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/menu_right_arrow"
                    android:id="@+id/direction_img"
                    android:paddingEnd="@dimen/menu_direction_end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/goal_layout"
                android:background="@mipmap/menu_box">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/menu_goal"
                    android:id="@+id/goal_logo"
                    android:layout_marginStart="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="15dp" />

                <de.morrox.fontinator.FontTextView
                    android:text="@string/menu_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/goal_text"
                    android:textColor="@color/option_bg"
                    app:font="Semibold.otf"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/menu_right_arrow"
                    android:id="@+id/direction_goal_img"
                    android:paddingEnd="@dimen/menu_direction_end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/activity_layout"
                android:background="@mipmap/menu_box">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/menu_activity"
                    android:id="@+id/activity_logo"
                    android:layout_marginStart="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="15dp" />

                <de.morrox.fontinator.FontTextView
                    android:text="@string/menu_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_text"
                    app:font="Semibold.otf"
                    android:textColor="@color/activity_bg"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/menu_right_arrow"
                    android:id="@+id/direction_activity_img"
                    android:paddingEnd="@dimen/menu_direction_end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/motion_layout"
                android:background="@mipmap/menu_box">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/menu_motion"
                    android:id="@+id/motion_logo"
                    android:layout_marginStart="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="15dp" />

                <de.morrox.fontinator.FontTextView
                    android:text="@string/menu_motion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/motion_text"
                    app:font="Semibold.otf"
                    android:textColor="@color/motion_bg"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/menu_right_arrow"
                    android:id="@+id/direction_motion_img"
                    android:paddingEnd="@dimen/menu_direction_end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/sleep_layout"
                android:background="@mipmap/menu_box">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/menu_sleep"
                    android:id="@+id/sleep_logo"
                    android:layout_marginStart="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="15dp" />

                <de.morrox.fontinator.FontTextView
                    android:text="@string/menu_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sleep_text"
                    app:font="Semibold.otf"
                    android:textColor="@color/sleep_bg"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/menu_right_arrow"
                    android:id="@+id/direction_sleep_img"
                    android:paddingEnd="@dimen/menu_direction_end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/heartrate_layout"
                android:background="@mipmap/menu_box">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/menu_heartrate"
                    android:id="@+id/heartrate_logo"
                    android:layout_marginStart="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="15dp" />

                <de.morrox.fontinator.FontTextView
                    android:text="@string/menu_heartrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/heartrate_text"
                    app:font="Semibold.otf"
                    android:textColor="@color/chart_walking"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/menu_right_arrow"
                    android:id="@+id/direction_heartrate_img"
                    android:paddingEnd="@dimen/menu_direction_end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/test_layout"
                android:background="@mipmap/menu_box">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/archery_logo"
                    android:layout_marginStart="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="15dp"
                    app:srcCompat="@android:drawable/ic_menu_help" />

                <de.morrox.fontinator.FontTextView
                    android:text="@string/menu_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/archery_text"
                    app:font="Semibold.otf"
                    android:textColor="@color/black_overlay"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/direction_atest_img"
                    app:srcCompat="@mipmap/menu_right_arrow"
                    android:paddingEnd="@dimen/menu_direction_end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/option_layout"
                android:background="@mipmap/menu_box">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/menu_option"
                    android:id="@+id/option_logo"
                    android:layout_marginStart="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="15dp" />

                <de.morrox.fontinator.FontTextView
                    android:text="@string/menu_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/option_text"
                    android:textColor="@color/option_bg"
                    app:font="Semibold.otf"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/menu_right_arrow"
                    android:id="@+id/direction_option_img"
                    android:paddingEnd="@dimen/menu_direction_end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/logout_layout"
                android:background="@mipmap/menu_log_out_box">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/menu_log_out"
                    android:id="@+id/logout_logo"
                    android:layout_marginStart="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="15dp" />

                <de.morrox.fontinator.FontTextView
                    android:text="@string/menu_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/logout_text"
                    app:font="Semibold.otf"
                    android:textColor="@color/chart_activation_text"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/menu_right_arrow"
                    android:id="@+id/direction_logout_img"
                    android:paddingEnd="@dimen/menu_direction_end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="15dp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
