<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBar</item>
    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- title text color -->
        <item name="android:textColorPrimary">@color/colorStep</item>
        <!-- subtitle text color -->
        <item name="android:textColorSecondary">@color/colorStep</item>
        <!-- action menu item text color -->
        <item name="actionMenuTextColor">@color/colorStep</item>
        <!-- action menu item icon color -->
        <item name="colorControlNormal">@color/colorStep</item>
    </style>

</resources>
