<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/main_background"
    android:id="@+id/heartrate_page_layout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/heartrate_img"
        android:layout_marginBottom="25dp"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_heartrate"/>

    <RelativeLayout
        android:id="@+id/heartrate_value_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heartrate_img"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/heartrate_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="33sp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/heartrate_unit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bpm"
            android:textSize="33sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/heartrate_value_text" />

    </RelativeLayout>

</RelativeLayout>
