<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/today_previous_arrow</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:textSize">@dimen/intro_font_size</item>
        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu</item>
        <item name="circularProgressBarStyle">@style/CircularProgressBar</item>
        <item name="android:buttonStyle">@style/MyButton</item>
    </style>
    
    <style name="AppThemeActionBarYellow" parent="@android:style/Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/profile_arrow_icon</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/MyActionBarYellow</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:textSize">@dimen/intro_font_size</item>
        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu</item>
        <item name="circularProgressBarStyle">@style/CircularProgressBar</item>
        <item name="android:buttonStyle">@style/MyButton</item>
    </style>

    <style name="MY.EditText.Style" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/gray2</item>
        <item name="android:textColorLink">@color/gray2</item>
        <item name="android:textSize">@dimen/intro_font_size</item>
        <item name="android:background">@drawable/element_box_hex_white</item>
        <item name="android:paddingLeft">@dimen/edit_txt_padding_left</item>
        <item name="android:paddingRight">@dimen/edit_txt_padding_left</item>
        <item name="android:textCursorDrawable">@color/gray2</item>
    </style>

    <style name="MY.EditText.Style.Small" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/gray2</item>
        <item name="android:textColorLink">@color/gray2</item>
        <item name="android:textSize">@dimen/intro_font_size</item>
        <item name="android:background">@drawable/element_box_hex_white_small</item>
        <item name="android:paddingLeft">@dimen/edit_txt_padding_small</item>
        <item name="android:paddingRight">@dimen/edit_txt_padding_small</item>
        <item name="android:textCursorDrawable">@color/gray2</item>
    </style>

    <style name="AppThemeLight" parent="@android:style/Theme.Holo.Light">
        <item name="circularProgressBarStyle">@style/CircularProgressBarLight</item>
    </style>

