    <style name="ListFonts" parent="@android:style/Widget.ListView">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="MyApp.PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:textAppearance">@style/MyPopupMenuText</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextStyle">@style/MyActionBar.Text</item>
        
    </style>
    <style name="MyActionBarYellow" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextStyle">@style/MyActionBar.Text2</item>
        
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyCustomText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/normal_font</item>
    </style>

    <style name="MyButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyTitleBar">
        <item name="android:background">@drawable/action_bar</item>
        <item name="android:titleTextStyle">@style/MyActionBar.Text</item>
    </style>

    <style name="MyActionBar.Text">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MyActionBar.Text2">
   		<item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyPopupMenuText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="OverFlow">
        <item name="android:background">@color/black</item>
        <item name="android:textAppearance">@style/MyActionBar.Text</item>
    </style>

    <!-- testìš© -->
    <style name="AppTheme.ConnectionInfoContainer">
        <item name="android:background">@color/gray1</item>
    </style>

    <style name="AppTheme.ConnectionInfoText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray1</item>
    </style>

    <style name="CircularProgressBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:progressDrawable">@drawable/progress</item>
        <item name="android:src">@drawable/progress</item>
        <item name="stroke_width">10dp</item>
        <item name="progress" format="float">0.1</item>
        <item name="marker_visible">true</item>
        <item name="thumb_visible">true</item>
    </style>
    <!-- <item name="progress_color">#ffff4444</item> -->
    <!-- <item name="progress_background_color">#ffffffff</item> -->
    <style name="CircularProgressBarLight">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:src">@drawable/progress</item>
        <item name="android:progressDrawable">@drawable/progress</item>
        <item name="stroke_width">10dp</item>
        <item name="progress" format="float">0.1</item>
        <item name="marker_visible">true</item>
        <item name="thumb_visible">true</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog" />
    
    <style name="Theme.Dialog.Alert" parent="Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>

</resources>