<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/element_cf_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/conn_2_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="@string/device_connect_f"
        android:textColor="@color/gray2"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_below="@+id/conn_2_txt1"
        android:layout_marginTop="51dp"
        android:layout_centerHorizontal="true" 
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_color2" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_alignBottom="@+id/progressBar1"
        android:layout_alignLeft="@+id/progressBar1"
        android:layout_alignRight="@+id/progressBar1"
        android:layout_alignTop="@+id/progressBar1"
        android:padding="35dp"
        android:src="@drawable/element_logo" />
</RelativeLayout>