<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:background="@drawable/element_bg_sleep"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="46dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/circle_rel"
                android:layout_width="208dp"
                android:layout_height="205dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/circle_back" >
                </LinearLayout>

                <com.standingegg.band.contents.CircularProgressBar
                    android:id="@+id/sleep_bar_2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    app:progress="0.0" />

                <com.standingegg.band.contents.CircularProgressBar
                    android:id="@+id/sleep_bar"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    app:progress="0.0" />
            </RelativeLayout>

            <!-- <com.standingegg.band.contents.CircularProgressBar -->
            <!-- android:id="@+id/sleep_bar_over" -->
            <!-- android:layout_width="177dp" -->
            <!-- android:layout_height="177dp" -->
            <!-- android:layout_alignTop="@+id/sleep_bar" -->
            <!-- android:layout_alignStart="@+id/sleep_bar" -->
            <!-- android:layout_alignBottom="@+id/sleep_bar" -->
            <!-- android:layout_centerHorizontal="true" -->
            <!-- android:layout_marginTop="10dp" -->
            <!-- android:layout_marginEnd="5dp" -->
            <!-- android:layout_marginBottom="10dp" -->
            <!-- app:progress="0.0" /> -->
            <!-- app:marker_progress="0.3" -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/circle_rel"
                android:layout_alignTop="@+id/circle_rel"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center" >

                <LinearLayout
                    android:id="@+id/sleep_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_sleep"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sleep_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sleep_txt"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/all_sleep_h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@color/black"
                        android:textSize="44sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="44sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/all_sleep_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@color/black"
                        android:textSize="44sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sleep_bar_blue"
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/sleep_all"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/gray" >
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/deep_txt"
                    android:layout_centerHorizontal="true"
                    android:text="@string/sleep_deep2"
                    android:textColor="@color/gray2"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/deep_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sleep_bar_blue"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/d_sleep_h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@color/gray2"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/gray2"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/d_sleep_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@color/gray2"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- <ListView -->
    <!-- android:id="@+id/listView" -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="fill_parent" -->
    <!-- android:layout_marginBottom="-10dp" -->
    <!-- android:layout_weight="0.5" -->
    <!-- android:background="@drawable/round_back" -->
    <!-- android:paddingBottom="10dp" > -->
    <!-- </ListView> -->

</LinearLayout>