<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/element_user_bg"
    android:gravity="center_vertical|center_horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_button"
        android:background="@drawable/toggle_widget_user_option_profile_button"
        android:layout_marginBottom="@dimen/user_option"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarm_button"
        android:background="@drawable/toggle_widget_user_option_alarm_button"
        android:layout_marginBottom="@dimen/user_option" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/battery_button"
        android:background="@drawable/toggle_widget_user_option_battery_button"
        android:layout_marginBottom="@dimen/user_option" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vib_button"
        android:background="@drawable/toggle_widget_user_option_vib_button"
        android:layout_marginBottom="@dimen/user_option" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noti_button"
        android:background="@drawable/toggle_widget_user_option_noti_button"
        android:layout_marginBottom="@dimen/user_option" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout_button"
        android:background="@drawable/toggle_widget_user_option_logout_button" />

</LinearLayout>